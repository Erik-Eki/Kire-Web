{
  "include": [
    "src/**/*",
    "src/node_modules"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "src/lib/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
      "$content/*": [
        "src/content/*"
      ],
      "$assets/*": [
        "src/assets/*"
      ],
      "$pages/*": [
        "src/pages/*"
      ],
      "$layouts/*": [
        "src/layouts/*"
      ]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "extends": "astro/tsconfigs/base"
}